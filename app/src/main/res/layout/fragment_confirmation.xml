<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_marginTop="?attr/actionBarSize"
             tools:context="com.example.danco.bonus1.fragment.ConfirmationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_margin="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/gridNameLabel"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="@string/gridNameLabelText"/>
        <TextView
            android:id="@+id/gridNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_margin="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/gridDescriptionLabel"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="@string/gridDescriptionLabelText"/>
        <TextView
            android:id="@+id/gridDescriptionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_margin="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/gridFavoriteLabel"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="@string/gridFavoriteLabelText"/>
        <TextView
            android:id="@+id/gridFavoriteValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty"/>
    </LinearLayout>

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="@string/okButtonText"/>
</LinearLayout>
